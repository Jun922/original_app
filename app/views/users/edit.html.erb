<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>Edit Account</h2>
      <h5>アカウントの編集</h5>
      <%= link_to "マイページに戻る", :back, class: 'btn'%>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: current_user, local: true do |f|%>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :name%>
          </div>
          <div class='field-input'>
            <%= f.text_field :name, autofocus: true%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :email%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :password%>
          </div>
          <div class='field-input'>
          <%= f.password_field :password, class:"field-input", id:"password", placeholder:"6文字以上の半角英数字" %>
          </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :password_confirmation%>
          </div>
          <div class='field-input'>
          <%= f.password_field :password_confirmation, class:"field-input", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
          </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :birthday%>
          </div>
          <div class='input-birth-wrap'>
          <%= raw sprintf(
                      f.date_select(
                        :birthday,
                        class:'select-birth',
                        id:"birth-date",
                        use_month_numbers: true,
                        prompt:'--',
                        start_year: 1930,
                        end_year: (Time.now.year - 5),
                        date_separator: '%s'),
                      "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
          </div>

        <div class="items-explain">
          <div class="weight-bold-text">
            Introduction
          </div>
          <%= f.text_area :introduction, class:"items-text", id:"item-info", placeholder:"私の名前はオリアプ太郎です" %>
        </div>
        </div>
        <div class='actions'>
          <%= f.submit "Update", class: 'btn'%>
        </div>
      <% end %>
    </div>
  </div>
</div>
