<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= @user.name %></h1>
    </section>
    <section class="stats">
      <%= render 'users/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to @user.followers.name %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
</div>
