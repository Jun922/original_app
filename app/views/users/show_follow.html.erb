<%= render "shared/header" %>

<div class="row">
  <section class="stats">
    <%= render 'users/stats' %>
    <% if @users.any? %>
      <div class="user_avatars">
        <% @users.each do |user| %>
          <%= link_to user.name, user_path(user.id) %>
        <% end %>
      </div>
    <% end %>
  </section>
  <div class='account-page' id='account-page'>
    <div class='account-page__inner--left account-page__header'>
      <%= link_to "戻る", :back, class: 'btn'%>
    </div>
  </div>
</div>
